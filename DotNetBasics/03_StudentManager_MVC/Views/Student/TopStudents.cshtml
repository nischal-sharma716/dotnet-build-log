@model List<Student>

<h2>Top Students by GPA</h2>

<form method="get" asp-action="TopStudents">
    <label>Number of Top Students:</label>
    <input type="number" name="count" value="2" />
    <button type="submit">Show</button>
</form>

@if (Model != null && Model.Any())
{
    <table border="1" style="margin-top:10px;">
        <thead>
            <tr><th>Id</th><th>Name</th><th>Age</th><th>GPA</th></tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.GPA</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students found.</p>
}
